<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".fragmentos.PlaceholderFragment">

    <!-- icono -->
    <ImageView
        android:id="@+id/img_icono"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.5"
        android:src="@drawable/ic_movie_empty"
        android:contentDescription="@string/sin_peliculas" />

    <!-- texto principal -->
    <TextView
        android:id="@+id/txt_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/sin_peliculas"
        android:textColor="@color/cinefan_text_secondary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- texto descriptivo -->
    <TextView
        android:id="@+id/txt_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="Usa el botón + para agregar tu primera película"
        android:textColor="@color/cinefan_text_tertiary"
        android:textSize="14sp" />

</LinearLayout>