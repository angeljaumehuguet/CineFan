<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base de la aplicaciÃ³n -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/cinefan_primary</item>
        <item name="colorPrimaryVariant">@color/cinefan_primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/cinefan_secondary</item>
        <item name="colorSecondaryVariant">@color/cinefan_secondary_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Colores de superficie -->
        <item name="android:colorBackground">@color/cinefan_background</item>
        <item name="colorSurface">@color/cinefan_surface</item>
        <item name="colorOnBackground">@color/cinefan_text_primary</item>
        <item name="colorOnSurface">@color/cinefan_text_primary</item>

        <!-- Colores de error -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@android:color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/cinefan_primary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/cinefan_background</item>

        <!-- Window -->
        <item name="android:windowBackground">@color/cinefan_background</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Material components -->
        <item name="materialButtonStyle">@style/CineFanButton</item>
        <item name="textInputStyle">@style/CineFanTextInput</item>
    </style>

    <!-- ======= TEMA SIN ACTION BAR ======= -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Tema para splash screen -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/cinefan_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Tema para actividades fullscreen -->
    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Action Bar personalizada -->
    <style name="CineFanActionBar" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@color/cinefan_primary</item>
        <item name="titleTextStyle">@style/CineFanActionBarTitle</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="CineFanActionBarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Botones -->
    <style name="CineFanButton" parent="Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CineFanButton.Primary">
        <item name="backgroundTint">@color/cinefan_primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CineFanButton.Secondary">
        <item name="backgroundTint">@color/cinefan_secondary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CineFanButton.Accent">
        <item name="backgroundTint">@color/cinefan_accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CineFanButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/cinefan_primary</item>
        <item name="android:textColor">@color/cinefan_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Inputs -->
    <style name="CineFanTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/cinefan_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/cinefan_text_secondary</item>
        <item name="android:textColorHint">@color/cinefan_text_secondary</item>
    </style>

    <!-- Cards -->
    <style name="CineFanCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/cinefan_surface</item>
    </style>

    <!-- Floating Action Button -->
    <style name="CineFanFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/cinefan_accent</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Toolbar -->
    <style name="CineFanToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/cinefan_primary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@color/cinefan_text_secondary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="CineFanBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/selector_bottom_nav</item>
        <item name="itemTextColor">@color/selector_bottom_nav</item>
        <item name="android:background">@color/cinefan_surface</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Tab Layout -->
    <style name="CineFanTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/cinefan_accent</item>
        <item name="tabSelectedTextColor">@color/cinefan_accent</item>
        <item name="tabTextColor">@color/cinefan_text_secondary</item>
        <item name="android:background">@color/cinefan_surface</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/cinefan_text_secondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Rating Bar -->
    <style name="CineFanRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/cinefan_accent</item>
        <item name="android:secondaryProgressTint">@color/cinefan_text_disabled</item>
        <item name="android:progressBackgroundTint">@color/cinefan_text_disabled</item>
    </style>

    <!-- Switch -->
    <style name="CineFanSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/cinefan_accent</item>
        <item name="trackTint">@color/cinefan_primary</item>
    </style>

    <!-- Chip -->
    <style name="CineFanChip" parent="Widget.Material3.Chip.Assist">
        <item name="chipBackgroundColor">@color/cinefan_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="chipCornerRadius">20dp</item>
    </style>

    <!-- Progress Bar -->
    <style name="CineFanProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/cinefan_accent</item>
        <item name="android:progressBackgroundTint">@color/cinefan_text_disabled</item>
    </style>

</resources>