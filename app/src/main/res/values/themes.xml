<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================================= -->
    <!-- TEMA CINEFAN - EDICIÃ“N VIOLETA PREMIUM -->
    <!-- ========================================= -->

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Colores primarios violeta -->
        <item name="colorPrimary">@color/cinefan_primary</item>
        <item name="colorPrimaryVariant">@color/cinefan_primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorPrimaryContainer">@color/cinefan_primary_light</item>
        <item name="colorOnPrimaryContainer">@color/cinefan_background</item>

        <!-- Colores secundarios (dorado complementario) -->
        <item name="colorSecondary">@color/cinefan_secondary</item>
        <item name="colorSecondaryVariant">@color/cinefan_secondary_dark</item>
        <item name="colorOnSecondary">@color/cinefan_background</item>
        <item name="colorSecondaryContainer">@color/cinefan_secondary_light</item>
        <item name="colorOnSecondaryContainer">@color/cinefan_background</item>

        <!-- Colores de superficie y fondo -->
        <item name="android:colorBackground">@color/cinefan_background</item>
        <item name="colorSurface">@color/cinefan_surface</item>
        <item name="colorOnBackground">@color/cinefan_text_primary</item>
        <item name="colorOnSurface">@color/cinefan_text_primary</item>
        <item name="colorSurfaceVariant">@color/cinefan_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/cinefan_text_secondary</item>

        <!-- Colores de estado -->
        <item name="colorError">@color/cinefan_error</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorErrorContainer">@color/error_background</item>
        <item name="colorOnErrorContainer">@color/cinefan_error</item>

        <!-- Colores de contorno -->
        <item name="colorOutline">@color/cinefan_outline</item>
        <item name="colorOutlineVariant">@color/cinefan_divider</item>

        <!-- Status bar y navigation bar -->
        <item name="android:statusBarColor">@color/cinefan_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/cinefan_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <!-- Window settings -->
        <item name="android:windowBackground">@drawable/gradient_background_main</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- Material components personalizados -->
        <item name="materialButtonStyle">@style/CineFanButton.Violeta</item>
        <item name="textInputStyle">@style/CineFanTextInput.Violeta</item>
        <item name="cardViewStyle">@style/CineFanCard.Violeta</item>
        <item name="materialCardViewStyle">@style/CineFanCard.Violeta</item>

        <!-- Toolbar y AppBar -->
        <item name="toolbarStyle">@style/CineFanToolbar.Violeta</item>
        <item name="actionBarStyle">@style/CineFanActionBar.Violeta</item>
    </style>

    <!-- ======= TEMA SIN ACTION BAR ======= -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- ======= TEMA PARA SPLASH SCREEN ======= -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background_violeta</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ======= ESTILOS DE BOTONES VIOLETA ======= -->
    <style name="CineFanButton.Violeta" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/gradient_button_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="rippleColor">@color/cinefan_ripple</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CineFanButton.Outlined.Violeta" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/cinefan_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/cinefan_primary</item>
        <item name="rippleColor">@color/cinefan_ripple</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CineFanButton.Text.Violeta" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/cinefan_primary</item>
        <item name="rippleColor">@color/cinefan_ripple</item>
    </style>

    <!-- ======= ESTILOS DE INPUTS VIOLETA ======= -->
    <style name="CineFanTextInput.Violeta" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/cinefan_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/cinefan_text_hint</item>
        <item name="android:textColorHint">@color/cinefan_text_hint</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="errorTextColor">@color/cinefan_error</item>
    </style>

    <!-- ======= ESTILOS DE CARDS VIOLETA ======= -->
    <style name="CineFanCard.Violeta" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/cinefan_surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="strokeColor">@color/cinefan_outline</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/cinefan_ripple</item>
    </style>

    <!-- ======= ESTILOS DE TOOLBAR VIOLETA ======= -->
    <style name="CineFanToolbar.Violeta" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/gradient_card_background</item>
        <item name="titleTextColor">@color/cinefan_text_primary</item>
        <item name="subtitleTextColor">@color/cinefan_text_secondary</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="CineFanActionBar.Violeta" parent="Widget.Material3.ActionBar.Solid">
        <item name="background">@drawable/gradient_card_background</item>
        <item name="titleTextStyle">@style/CineFanActionBarTitle</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="CineFanActionBarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/cinefan_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ======= ESTILOS DE TAB LAYOUT VIOLETA ======= -->
    <style name="CineFanTabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/cinefan_text_hint</item>
        <item name="tabSelectedTextColor">@color/cinefan_text_primary</item>
        <item name="tabIndicatorColor">@color/cinefan_primary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/cinefan_surface</item>
        <item name="tabRippleColor">@color/cinefan_ripple</item>
    </style>

    <!-- ======= ESTILOS DE FLOATING ACTION BUTTON ======= -->
    <style name="CineFanFAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/cinefan_primary</item>
        <item name="tint">@android:color/white</item>
        <item name="rippleColor">@color/cinefan_ripple</item>
        <item name="elevation">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- ======= ESTILOS DE PROGRESS BAR ======= -->
    <style name="CineFanProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/cinefan_primary</item>
        <item name="trackColor">@color/cinefan_surface_light</item>
    </style>

    <!-- ======= ESTILOS DE SWITCHES Y CHECKBOXES ======= -->
    <style name="CineFanSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/cinefan_primary</item>
        <item name="trackTint">@color/cinefan_surface_light</item>
    </style>

    <style name="CineFanCheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/cinefan_primary</item>
    </style>

    <!-- ======= ESTILOS DE TEXTO ======= -->
    <style name="CineFanText.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/cinefan_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CineFanText.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/cinefan_text_secondary</item>
    </style>

    <style name="CineFanText.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/cinefan_text_primary</item>
    </style>

    <style name="CineFanText.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/cinefan_text_hint</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">@color/cinefan_text_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>